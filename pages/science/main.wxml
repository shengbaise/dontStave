<view class="science-technology">
  <ds-tabs bind:selectTab="selectTab" currentTab="{{currentTab}}" tabs="{{tabs}}"></ds-tabs>
  <scroll-view scroll-top="{{scrollTop}}" class="view" scroll-y>
    <common-good wx:if="{{currentGoods.length > 0}}" bind:click="toDetail" wx:for="{{currentGoods}}" good="{{item}}" wx:key="{{item._id}}" type="science">
      <view class="attrs">
        <view class="attr-contanier" wx:if="{{item.damage}}"><view class="aggressivity">伤害</view>
          <view class="attr-value">{{item.damage}}</view>
        </view>
        <view class="attr-contanier" wx:if="{{item.durable}}"><view class="durable">耐久</view>
          <view class="attr-value">{{item.durable}}</view>
        </view>
      </view>
    </common-good>
    <view wx:if="{{currentGoods.length === 0}}" class="no-data">暂无数据～～～</view>
  </scroll-view>
</view>
