page {
  height: 100%;
  width: 100%;
  font-family: Avenir,Helvetica,Arial,sans-serif;
}
.find-friend {
  height: 100%;
  width: 100%;
  position: relative;
}
.friends {
  position: relative;
  margin-top:40px;
  box-sizing: border-box;
}
.friend {
  padding: 16px;
  position: relative;
  background: #fff;
  margin-bottom: 12px;
  border-bottom: 12px #f7f8fa solid;
}
.friend-name {
  display: flex;
  font-size: 14px;
  align-items: center;
  justify-content: space-between;
}
.name-text {
  color: #323233;
}
.name-type {
  color: #f44;
}
.other-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid rgba(178,186,194,.15);
  padding-bottom: 12px;
}
.other-msg {
  margin-top: 3px;
  color: #969799;
  font-size: 12px;
}
.copy-number {
  padding: 12px 24px;
  color: #009688;
  font-size: 12px
}
.personal-talk {
  text-align: left;
  padding-top: 12px;
  font-size: 14px;
  color: #2c3e50;
}
.find-friend .edit-button {
  position: fixed;
  background-color: rgba(0, 150, 136, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12px;
  border-radius: 50%;
  width: 32px;
  height: 32px;
  bottom: 20px;
  right: 20px
}
.find-friend .edit-button .icon-bianji {
  font-size: 24px;
  color: #fff
}
.type-tabs {
  position: fixed !important;
  top:0;
  z-index:12;
  flex-shrink: 0;
  background-color: #37474f !important;
}
.type-tab {
  width: auto !important;
  padding: 0 12px !important;
}
