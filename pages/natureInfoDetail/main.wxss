page {
  height: 100%;
}
.nature-intro-detail {
  position: relative;
  height: 100%;
  width: 100vw;
}
.view {
  position: absolute;
  top: 0;
  height: 100%;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}
.science-tip, .origin-tip {
  height: 24px;
  margin-top: -12px;
  margin-right: -12px;
  text-align: right;
  color: #999;
  font-size: 12px;
}
.attrs {
  font-size: 15px
}

.attrs .aggressivity,
.attrs .durable {
  width: 50px;
  display: inline-block;
  margin-right: 12px;
  font-size: 12px;
  color: #999;
  letter-spacing: 2px;
}
.attr-contanier {
  display: flex;
  align-items: center;
}
.attr-value {
  font-size: 14px;
  color: #606266;
  text-align: left;
  font-family: Arial Rounded MT Bold;
  letter-spacing: 2px;
}
.materials {
  display:flex;
  flex-flow:row wrap;
  justify-content:space-around;
}
.material {
  display: flex;
  flex-flow: wrap row;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 30px;
  font-size: 12px;
}
.material-img {
  width: 36px;
  height: 36px;
}
.detail-container {
  padding: 12px
}
.detail {
  position: relative;
  padding: 24px 24px 0 24px;
  background-color: #fff;
  border-radius: 6px;
  min-height: 30vh;
  border: 1px solid #e0e0e0;
  box-shadow: inset 0 4px 8px #e0e0e0;
}
.detail .attr-text {
  align-items: center;
  margin-bottom: 12px;
  padding-right: 12px;
  height: 36px;
  border-radius: 4px;
  border-left: 4px solid #666;
  background-color: #f9f9f9;
  color: #999;
  font-size: 14px;
  display: flex;
  flex-flow: nowrap row;
  justify-content: space-between;
}
.detail .attr-text .key {
  padding-left: 10px;
}
.detail .attr-text .value {
  color: #333;
}
