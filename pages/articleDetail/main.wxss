
  .article-img-container {
    width: 100%;
    height: 180px;
    background-size: cover;
    background-position: 50%;
    overflow: hidden;
    -webkit-overflow-scrolling: touch;
  }
  .title {
    margin-top: 12px;
    margin-bottom: 16px;
    font-weight: 600;
    line-height: 1.25;
    font-size: 20px;
  }
  .time-author {
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    align-items: center;
    margin: 18px 0;
    font-size: 12px;
    color: #999;
  }
.article-content {
  padding: 12px;
}
.author, .time {
  display: flex;
  align-items: center;
}
