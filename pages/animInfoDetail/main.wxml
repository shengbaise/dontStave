<view class="anim-info-detail">
  <scroll-view scroll-y="{{true}}" class="view">
    <common-good good="{{animInfo}}" hasFeedback="{{true}}">
      <view class="animal-attrs">
        <view class="animal-attr">
          <view wx:if="{{animInfo.damage}}" class="hurt"><view>伤害</view><view class="attr-value">{{animInfo.damage}} </view></view>
          <view wx:if="{{animInfo.hp}}" class="live"><view>生命</view><view class="attr-value">{{animInfo.hp}}</view></view>
        </view>
        <view class="speed animal-attr">
          <view wx:if="{{animInfo.walkSpeed}}" class="speed-item"><view>行走</view><view class="attr-value">{{animInfo.walkSpeed}} </view> </view>
          <view wx:if="{{animInfo.runSpeed}}" class="speed-item"><view>奔跑</view><view class="attr-value">{{animInfo.runSpeed}}</view></view>
        </view>
      </view>
    </common-good>
    <detail-container attributes="{{attributes}}" detail="{{animInfo}}">
      <view>
        <composition title="战利品" wx:if="{{animInfo.reward && animInfo.reward.length}}" size="{{size}}" composition="{{animInfo.reward}}"></composition>
        <view wx:if="{{hasFeedback || hasCollection}}" class="anim-materials" style="display: flex;">
          <view class="need-materials" wx:if="{{hasFeedback}}">
            <composition size="{{size}}" composition="{{animInfo.feedBackItems}}"></composition>
            <view class="need-desc">赠品</view>
          </view>
          <view class="fail-materials" wx:if="{{hasCollection}}">
            <composition size="{{size}}" composition="{{animInfo.collectItems}}"></composition>
            <view class="need-desc">收集</view>
          </view>
        </view>
      </view>
    </detail-container>
  </scroll-view>
</view>
