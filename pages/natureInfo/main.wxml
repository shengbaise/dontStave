<view class="nature-info">
  <ds-tabs bind:selectTab="selectTab" currentTab="{{currentTab}}" tabs="{{tabs}}"></ds-tabs>
  <scroll-view class="view" scroll-y scroll-top="{{scrollTop}}">
    <common-good wx:if="{{currentGoods.length > 0}}" bind:click="toDetail" wx:for="{{currentGoods}}" good="{{item}}" wx:key="_id">
      <view class="attrs">
        <view class="attr-contanier" wx:if="{{item.attr[0] && item.attr[0] !== '0'}}"><view class="aggressivity">攻击力</view>
          <view class="attr-value">{{item.attr[0]}}</view>
        </view>
        <view class="attr-contanier" wx:if="{{item.attr[1] && item.attr[1] !== '0'}}"><view class="durable">耐久</view>
          <view class="attr-value" wx:if="{{item.attr[1] == 10001}}">无限</view>
          <view class="attr-value" wx:else>{{item.attr[1]}}</view>
        </view>
      </view>
    </common-good>
    <view wx:if="{{currentGoods.length === 0}}" class="no-data">暂无数据～～～</view>
  </scroll-view>
</view>
