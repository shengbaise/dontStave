<view class="recipe">
  <ds-tabs bind:selectTab="selectTab" currentTab="{{currentTab}}" tabs="{{tabs}}"></ds-tabs>
  <scroll-view scroll-top="{{scrollTop}}" class="view" scroll-y>
    <common-good wx:if="{{currentItems.length > 0}}" bind:click="toDetail" wx:for="{{currentItems}}" good="{{item}}" wx:key="{{item._id}}">
      <view class="food-attrs">
        <view class="food-attr"  wx:for-item="attrData" wx:for="{{foodAttr}}" wx:key="{{index}}">
          <image wx:if="{{item[attrData.attr]}}" class="food-attr-img" src="{{attrData.url}}" alt="" mode="aspectFit" />
          <view wx:if="{{item[attrData.attr]}}" class="attr-content">{{item[attrData.attr]}}</view>
        </view>
      </view>
    </common-good>
    <view wx:if="{{currentItems.length === 0}}" class="no-data">暂无数据～～～</view>
  </scroll-view>
</view>
