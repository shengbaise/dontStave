page {
  height: 100%;
}
.anim-info-detail {
  position: relative;
  height: 100%
}

.anim-info-detail .view {
  position: absolute;
  top: 0;
  height: 100%;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.anim-info-detail .ability .title {
  font-size: 16px;
  font-weight: 600;
  text-align: left
}

.anim-info-detail .ability .content {
  padding: 12px 12px 12px 0;
  text-align: left;
  font-size: 14px;
  color: #333;
}

.anim-info-detail .materials-collection {
  padding:12px 0;
  display: flex;
  flex-flow: nowrap row
}

.anim-info-detail .need-materials {
  border-right: 1px solid #999
}

.anim-info-detail .fail-materials .material-img {
  margin-left: 2px
}

.anim-info-detail .need-materials,
.anim-info-detail .fail-materials {
  align-items: center;
  display: flex;
  justify-content: space-between;
  flex-flow: column;
  text-align: center;
  width: 50%
}
.need-materials .material-item, .fail-materials .material-item{
  display:flex;
  flex-flow:row wrap;
}

.anim-info-detail .need-materials .material-img,
.anim-info-detail .fail-materials .material-img {
  width: 32px
}

.anim-info-detail .need-desc {
  color: #999;
  font-size: 12px
}

.attr-contanier {
  display: flex;
  align-items: center;
}
.attr-value {
  font-size: 14px;
  color: #606266;
  text-align: left;
  font-family: Arial Rounded MT Bold;
  letter-spacing: 2px;
}
.materials {
  display:flex;
  flex-flow:row wrap;
  justify-content:space-around;
}
.material {
  display: flex;
  flex-flow: wrap row;
  justify-content: space-around;
  align-items: center;
  padding-right:12px;
  padding-bottom: 12px;
  font-size: 12px;
}
.material-img {
  width: 36px;
  height: 36px;
}
.detail-container {
  padding: 12px
}
.detail {
  position: relative;
  padding: 24px 24px 0 24px;
  background-color: #fff;
  border-radius: 6px;
  min-height: 30vh;
  border: 1px solid #e0e0e0;
  box-shadow: inset 0 4px 8px #e0e0e0;
}
.detail .attr-text {
  align-items: center;
  margin-bottom: 12px;
  padding-right: 12px;
  height: 36px;
  border-radius: 4px;
  border-left: 4px solid #666;
  background-color: #f9f9f9;
  color: #999;
  font-size: 14px;
  display: flex;
  flex-flow: nowrap row;
  justify-content: space-between;
}
.detail .attr-text .key {
  padding-left: 10px;
}
.detail .attr-text .value {
  color: #333;
}
.animal-attrs {
  font-size: 14px;
  color: #999;
}
.speed {
  padding-top: 6px;
}
.speed-item, .hurt, .live {
  width:50%;
  display: flex;
  align-items: center;
  margin-right: 12px;
  font-size: 12px;
  color: #999;
  letter-spacing: 2px;
}
.animal-attr {
  display: flex;
  align-items: center;
}
.attr-value {
  padding-left: 24px;
  display: inline-block;
  font-size: 14px;
  color: #606266;
  text-align: left;
  font-family: Arial Rounded MT Bold;
  letter-spacing: 2px;
}
.top {
  height: 32px;
  margin-top: -12px;
  margin-right: -12px;
  text-align: right;
}
.top .top-tip {
  color: #999;
  font-size: 12px;
}
.top .top-img {
  width: 32px;
}
.material-img-tool {
  width: 24px;
}
.label-items {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex-flow: row wrap;
  margin-bottom: 8px;
}
.label-items .label-item {
  display: flex;
  flex-flow: row wrap;
  margin-left: 6px;
  padding: 4px 8px;
  justify-content: space-between;
  align-items: center;
  border-radius: 50px;
  background-color: #f9f9f9;
  box-shadow: 0 2px 4px #ececec;
}
.label-items .lable-text {
  margin-left: 8px;
  font-size: 12px;
  color: #aaa;
}
.ability {
  padding-top: 12px;
}