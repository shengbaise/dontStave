.feed-back {
  padding: 12px
}

.feed-back .name-alis {
  padding: 12px;
  text-align: left;
  border: 1px solid #e0e0e0;
  border-radius: 4px 4px 0 0
}

.feed-back .name-alis .name {
  display: inline-block;
  margin-right: 2px;
  font-size: 14px;
  font-weight: 600;
  color: #999
}

.feed-back .name-alis .alis {
  display: inline-block;
  font-size: 12px;
  color: #999
}

.feed-back .feed-back-textarea {
  width: auto !important;
  height: 90px;
  font-size: 14px;
  line-height: 21px;
  outline: none;
  text-decoration: none;
  border: 1px solid #e0e0e0;
  border-top: none;
  padding: 8px 0 8px 8px;
  border-radius: 4px
}

.feed-back .commit {
  margin-top: 48px;
  color: #009688;
  font-size: 32rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center
}
