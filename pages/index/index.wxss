/**index.wxss**/
page {
  height: 100%;
  width: 100%;
  font-family: Avenir,Helvetica,Arial,sans-serif;
}
.home-container {
  position: relative;
  padding-top: 0;
  width: 100%;
  height: 100%;
  -webkit-overflow-scrolling: touch;
}

.fixed-item {
  position: fixed;
  width: 100%;
  z-index:12;
}
.tabs {
  margin-top: 12px;
  padding-bottom:12px;
  padding: 0 10px;
  display: flex;
  flex-flow: wrap row;
  font-size:14px;
  justify-content: flex-start;
  color: #a6a9b0;
}
.tabs .tab {
  padding-bottom: 12px;
  flex-basis: 20%;
  text-align:center;
}
.tabs .tab-img {
  height: 32px;
  width: 32px;
}
.view {
  position: relative;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
  width: 100%;
}
.bottom-tip {
  position: absolute;
  left: 0;
  bottom:-30px;
  width:100%;
  font-size:12px;
  color:#999;
  text-align:center;
  padding-bottom: 12px;
}
.article-tab {
  width: auto !important;
  padding: 0 12px !important;
}
.article-img {
  margin-top: 12px;
  width: 100px;
  height: 100px;
  border-radius: 6px;
}
.articles {
  padding: 16px;
}
.article {
  padding: 12px;
  border-bottom: 1px solid rgba(178,186,194,.15);
}
.article-author-time {
  font-size: 12px;
  color: #b2bac2;
}
.article-title {
  margin-top: 12px;
  line-height: 1.2;
  font-size: 18px;
  font-weight: 600;
  color: #262626;
}

.tabs .tab-name {
  font-size: 12px;
}
