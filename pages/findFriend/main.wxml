<view class="find-friend">
  <i-tabs style="" color="#f5f5f5" i-class="type-tabs" current="{{currentType.id}}" scroll bindchange="handleChangeScroll">
    <i-tab i-class="type-tab" wx:for="{{typeList}}" key="{{item.id}}" wx:key="id" title="{{item.name}}">{{item.name}}</i-tab>
  </i-tabs>
  <!-- <scroll-view scroll-top="{{scrollTop}}" scroll-y="{{true}}" class="view" bindscrolltolower="loadMore"> -->
    <view class="friends">
      <view class="friend"
        wx:for="{{friends}}"
        wx:key="_id">
        <view class="friend-name">
          <text class="name-text">{{item.name}}</text>
          <text class="name-type">{{item.type == 2 ? 'STEAM' : 'WEGAME'}}</text>
        </view>
        <view class="other-container">
          <text class="other-msg" decode="{{true}}">
            {{item.time}}&nbsp;&nbsp;&nbsp;{{item.sex == 1 ? '小哥哥' : '小姐姐'}}&nbsp;&nbsp;&nbsp;{{item.contactType === 1 ? 'QQ' : '微信'}}&nbsp;&nbsp;&nbsp;{{item.contact}}&nbsp;&nbsp;&nbsp;
          </text>
          <view class="copy-number" bindtap="copyNumber" data-content="{{item.contact}}">复制</view>
        </view>
        <view class="personal-talk">{{item.desc}}</view>
      </view>
      <view class="bottom-tip" wx:if="{{loading}}">加载中...</view>
      <view class="bottom-tip" wx:if="{{loaded && allFriends.length === 0}}">没有更多数据</view>
    </view>
  <!-- </scroll-view> -->
  <view wx:if="{{true}}" class="edit-button" bindtap="toNew">
    <i-icon type="brush" color="#ffffff" size="20" />
  </view>
  <i-toast id="toast" />
</view>
