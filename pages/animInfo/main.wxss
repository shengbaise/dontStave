page {
  height: 100%;
}
.anim-info {
  display: flex;
  flex-flow: column;
  height: 100%;
}

.anim-info .tab-selected {
  color: #b7ba6b !important
}

.anim-info .tabs {
  flex-shrink: 0;
  height: 42px;
  width: 100%;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
  white-space: nowrap;
  font-size: 14px;
  background-color: #263238;
  color: #999;
  justify-content: space-around;
  align-items: center
}

.anim-info .tabs .tab {
  display: inline-block;
  width: 64px;
  height: 42px;
  margin-right: 12px;
  line-height: 42px;
  text-align: center;
  white-space: nowrap
}

.anim-info .view {
  flex-grow: 1;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
  height: 100%
}
.animal-attrs {
  font-size: 14px;
  color: #999;
}
.speed {
  padding-top: 6px;
}
.speed-item, .hurt, .live {
  width:50%;
  display: flex;
  align-items: center;
  margin-right: 12px;
  font-size: 12px;
  color: #999;
  letter-spacing: 2px;
}
.animal-attr {
  display: flex;
  align-items: center;
}
.attr-value {
  padding-left: 24px;
  display: inline-block;
  font-size: 14px;
  color: #606266;
  text-align: left;
  font-family: Arial Rounded MT Bold;
  letter-spacing: 2px;
}
