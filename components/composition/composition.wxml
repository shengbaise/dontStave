<view wx:if="{{title}}" class="ds-materials-title">{{title}}</view>
<view class="ds-materials">
  <view class="ds-material" wx:for="{{composition}}" wx:key="index">
    <image style="width:{{size + 'px'}};height: {{size + 'px'}}" wx:if="{{item.item && item.item.src}}" data-item="{{item}}" bindtap="toImgDetail" class="ds-material-img" src="{{imgDomain+item.item.src}}"alt="" mode="aspectFit" />
    <view wx:if="{{item && item.num && item.num != 0 && showNumber}}">x {{item.num}}</view>
  </view>
</view>
